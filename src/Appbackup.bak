import React, { useState } from 'react';
import { BrowserRouter as Router, Routes, Route } from 'react-router-dom';
import EstimateForm from './pages/EstimateForm';
import PreviewPage from './pages/PreviewPage';
import BottomNav from './components/BottomNav';

function App() {
  // ★ ここで formData を定義（最低限、オブジェクトでOK）
  const [formData, setFormData] = useState({});

  return (
    <Router>
      <Routes>
        {/* EstimateForm に formData と setFormData を渡す */}
        <Route path="/" element={<EstimateForm formData={formData} setFormData={setFormData} />} />
        <Route path="/preview" element={<PreviewPage formData={formData} />} />
      </Routes>

      {/* BottomNav にも渡す（今後 Preview 内で使うなら） */}
      <BottomNav formData={formData} />
    </Router>
  );
}

export default App;
